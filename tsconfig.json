{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@modules/*": ["./src/modules/*"],
      "@auth/*": ["./src/modules/auth/*"],
      "@guards/*": ["./src/modules/auth/guards/*"],
      "@organizations/*": ["./src/modules/organizations/*"],
      "@users/*": ["./src/modules/users/*"],
      "@telegram/*": ["./src/modules/telegram/*"],
      "@orders/*": ["./src/modules/orders/*"],
      "@channels/*": ["./src/modules/channels/*"],
      "@products/*": ["./src/modules/products/*"],
      "@bots/*": ["./src/modules/bots/*"],
      "@schema/*": ["./src/modules/schema/*"],
      "@file/*": ["./src/modules/file/*"],
      "@core/*": ["./src/core/*"],
      "@prisma/*": ["./src/core/prisma/*"],
      "@webhook/*": ["./src/modules/webhook/*"],
      "@customers/*": ["./src/modules/customers/*"],
      "@shared/*": ["./src/shared/*"],
      "@/*": ["./src/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true
  }
}
